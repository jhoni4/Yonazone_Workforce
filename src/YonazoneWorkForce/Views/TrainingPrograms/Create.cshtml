@model YonazoneWorkForce.ViewModels.CreateNewTrainingProgramViewModel
@{
    ViewData["Title"] = "Computer Create Form";
}


<h2>
    @ViewData["Title"]</h2>
<br>
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.TrainingProgram.Name" class="col-md-2 control-label">Name of The Program</label>
            <div class="col-md-10">
                <input asp-for="@Model.TrainingProgram.Name" class="form-control" />
                <span asp-validation-for="@Model.TrainingProgram.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.TrainingProgram.Description" class="col-md-2 control-label">Description of Program </label>
            <div class="col-md-10">
                <input asp-for="@Model.TrainingProgram.Description" class="form-control" />
                <span asp-validation-for="@Model.TrainingProgram.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.TrainingProgram.MaxCapacity" class="col-md-2 control-label">MaxCapacity of Program </label>
            <div class="col-md-10">
                <input asp-for="@Model.TrainingProgram.MaxCapacity" class="form-control" />
                <span asp-validation-for="@Model.TrainingProgram.MaxCapacity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>
        <div>
            <a asp-action="Index">Go Back </a>
        </div>
    </div>
</form>