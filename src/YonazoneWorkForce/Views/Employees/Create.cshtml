@model YonazoneWorkForce.ViewModel.CreateNewEmployeeViewModel
@{
    ViewData["Title"] = "Employee Create Form";
}

<h2>@ViewData["Title"]</h2>
<br>
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Employee.FirstName" class="col-md-2 control-label">First Name</label>
            <div class="col-md-10">
                <input asp-for="@Model.Employee.FirstName" class="form-control" />
                <span asp-validation-for="@Model.Employee.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Employee.LastName" class="col-md-2 control-label">Last Name</label>
            <div class="col-md-10">
                <input asp-for="@Model.Employee.LastName" class="form-control" />
                <span asp-validation-for="@Model.Employee.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Employee.MiddleInitial" class="col-md-2 control-label">Middle Initial</label>
            <div class="col-md-10">
                <input asp-for="@Model.Employee.MiddleInitial" class="form-control" />
                <span asp-validation-for="@Model.Employee.MiddleInitial" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Employee.JobTitle" class="col-md-2 control-label">JobTitle</label>
            <div class="col-md-10">
                <input asp-for="@Model.Employee.JobTitle" class="form-control" />
                <span asp-validation-for="@Model.Employee.JobTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Employee" class="btn btn-info" />
            </div>
        </div>
        <div>
            <a asp-action="Index">Go Back </a>
        </div>
    </div>
</form>