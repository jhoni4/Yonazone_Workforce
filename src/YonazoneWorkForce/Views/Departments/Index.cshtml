@model YonazoneWorkForce.ViewModel.AllDepartmentsViewModel
@{
    ViewData["Title"] = "All Departments";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-md-3" style="font: 1.3em bold italic;">@Html.LabelFor(model => model.Department.Name)</div>
    <div class="col-md-5" style="font: 1.3em bold italic;">@Html.LabelFor(model => model.Department.Description)</div>
</div><hr />
@foreach (var item in Model.Departments) 
{
    <div class="row">
        <div class="col-md-3">@Html.DisplayFor(modelItem => item.Name)</div>
        <div class="col-md-5">@Html.DisplayFor(modelItem => item.Description)</div>
    </div>
}

<div>
    <a asp-action="Create">Create New Department</a>
</div>
