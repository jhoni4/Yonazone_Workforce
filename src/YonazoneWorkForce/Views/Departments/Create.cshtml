@model YonazoneWorkForce.ViewModels.CreateNewDepartmentViewModel
@{
    ViewData["Title"] = "Department Create Form";
}

<h2>@ViewData["Title"]</h2>
<br>
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Department.Name" class="col-md-2 control-label">Department Name</label>
            <div class="col-md-10">
                <input asp-for="@Model.Department.Name" class="form-control" />
                <span asp-validation-for="@Model.Department.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Department.Description" class="col-md-2 control-label">Description</label>
            <div class="col-md-10">
                <input asp-for="@Model.Department.Description" class="form-control" />
                <span asp-validation-for="@Model.Department.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Department" class="btn btn-info" />
            </div>
        </div>
        <div>
            <a asp-action="Index">Go Back </a>
        </div>
    </div>
</form>